build-type:         Simple
cabal-version:      >=1.10

library
    hs-source-dirs:     src
    exposed-modules:    Mauke
    build-depends:      base , TypeCompose , gll , template-haskell
    default-language:   Haskell2010

executable mauke
    hs-source-dirs:     app , src
